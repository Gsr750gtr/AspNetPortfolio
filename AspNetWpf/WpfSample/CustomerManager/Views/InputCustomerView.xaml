<UserControl x:Class="CustomerManager.Views.InputCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="StackPanel" >
                    <Setter Property="Margin" Value="2"/>
                </Style>
                
                <Style TargetType="TextBlock">
                    <Setter Property="Width" Value="70"/>
                </Style>
                
                <Style TargetType="TextBox">
                    <Setter Property="MinWidth" Value="150"/>
                </Style>
            </StackPanel.Resources>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="取引先コード"/>
                <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" MaxLength="10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="取引先名称"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="取引先名カナ"/>
                <TextBox Text="{Binding NameKana, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="都道府県"/>
                <TextBox Text="{Binding Prefecture, UpdateSourceTrigger=PropertyChanged}" MaxLength="100"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Width" Value="60"/>
                </Style>
            </StackPanel.Resources>
            
            <Button Command="{Binding OKCommand}" Content="OK"/>
            <Button Command="{Binding CancelCommand}" Content="Cancel"/>
        </StackPanel>
    </DockPanel>
</UserControl>
